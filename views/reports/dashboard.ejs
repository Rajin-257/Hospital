<div class="row mb-4">
    <div class="col-md-12">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title mb-4">Reports Dashboard</h2>
                <p class="lead">Generate and view reports for hospital operations and analysis.</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Patient Visit Report -->
    <div class="col-md-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Patient Visit Report</h5>
            </div>
            <div class="card-body">
                <p>Generate reports on patient visits, appointments, and new registrations for a specified time period.</p>
                <a href="/reports/patient-visits" class="btn btn-primary mt-3">Generate Report</a>
            </div>
        </div>
    </div>
    
    <!-- Revenue Report -->
    <div class="col-md-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">Revenue Report</h5>
            </div>
            <div class="card-body">
                <p>Generate financial reports including total revenue, collections, and outstanding payments for a specified time period.</p>
                <a href="/reports/revenue" class="btn btn-success mt-3">Generate Report</a>
            </div>
        </div>
    </div>
    
    <!-- Lab Test Report -->
    <div class="col-md-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">Lab Test Report</h5>
            </div>
            <div class="card-body">
                <p>Generate reports on laboratory tests, including test type distribution, completion rates, and revenue generated.</p>
                <a href="/reports/lab-tests" class="btn btn-info mt-3">Generate Report</a>
            </div>
        </div>
    </div>
    
    <!-- Export Options -->
    <div class="col-md-6 mb-4">
        <div class="card shadow h-100">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0">Export Reports</h5>
            </div>
            <div class="card-body">
                <p>Export any report to CSV or PDF format for further analysis or record-keeping.</p>
                <div class="card mt-3">
                    <div class="card-body">
                        <form action="/reports/export" method="GET">
                            <div class="mb-3">
                                <label for="reportType" class="form-label">Report Type</label>
                                <select class="form-select" id="reportType" name="reportType" required>
                                    <option value="">Select a report</option>
                                    <option value="patient-visits">Patient Visit Report</option>
                                    <option value="revenue">Revenue Report</option>
                                    <option value="lab-tests">Lab Test Report</option>
                                </select>
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="startDate" class="form-label">Start Date</label>
                                    <input type="date" class="form-control" id="startDate" name="startDate" required>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="endDate" class="form-label">End Date</label>
                                    <input type="date" class="form-control" id="endDate" name="endDate" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="format" class="form-label">Export Format</label>
                                <select class="form-select" id="format" name="format" required>
                                    <option value="csv">CSV</option>
                                    <option value="pdf">PDF</option>
                                </select>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning">Export Report</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>