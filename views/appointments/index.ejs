<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Appointments</h2>
    <div>
        <a href="/appointments/today" class="btn btn-info me-2">
            <i class="fas fa-calendar-day"></i> Today's Appointments
        </a>
        <a href="/appointments/new" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Appointment
        </a>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form action="/appointments" method="GET" class="row g-3">
            <div class="col-md-4">
                <label for="date" class="form-label">Date</label>
                <input type="date" class="form-control" id="date" name="date" value="<%= selectedDate %>">
            </div>
            <div class="col-md-4">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status">
                    <option value="">All Statuses</option>
                    <option value="scheduled" <%= selectedStatus === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
                    <option value="completed" <%= selectedStatus === 'completed' ? 'selected' : '' %>>Completed</option>
                    <option value="cancelled" <%= selectedStatus === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                    <option value="no-show" <%= selectedStatus === 'no-show' ? 'selected' : '' %>>No Show</option>
                </select>
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-filter"></i> Filter
                </button>
                <a href="/appointments" class="btn btn-secondary ms-2">
                    <i class="fas fa-redo"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Appointments List -->
<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Reason</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (appointments && appointments.length > 0) { %>
                        <% appointments.forEach(appointment => { %>
                            <tr>
                                <td><%= new Date(appointment.appointmentDate).toLocaleDateString() %></td>
                                <td><%= appointment.appointmentTime %></td>
                                <td>
                                    <a href="/patients/<%= appointment.Patient.id %>" class="patient-link" data-bs-toggle="modal" data-bs-target="#patientModal<%= appointment.Patient.id %>">
                                        <%= appointment.Patient.firstName %> <%= appointment.Patient.lastName %>
                                    </a>
                                    
                                    <!-- Patient Quick View Modal -->
                                    <div class="modal fade" id="patientModal<%= appointment.Patient.id %>" tabindex="-1" aria-labelledby="patientModalLabel<%= appointment.Patient.id %>" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header bg-info text-white">
                                                    <h5 class="modal-title" id="patientModalLabel<%= appointment.Patient.id %>">
                                                        <i class="fas fa-user-injured me-2"></i>Patient Information
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body p-4">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <h5 class="mb-3"><%= appointment.Patient.firstName %> <%= appointment.Patient.lastName %></h5>
                                                            <p><strong>Patient ID:</strong> <%= appointment.Patient.patientId %></p>
                                                            <p><strong>Contact:</strong> <%= appointment.Patient.contactNumber %></p>
                                                        </div>
                                                        <div class="col-md-6 text-md-end">
                                                            <div class="mt-3 mt-md-0">
                                                                <a href="/patients/<%= appointment.Patient.id %>" class="btn btn-primary">
                                                                    <i class="fas fa-eye me-1"></i>View Full Profile
                                                                </a>
                                                                <a href="/patients/<%= appointment.Patient.id %>/medical-records" class="btn btn-secondary ms-2">
                                                                    <i class="fas fa-notes-medical me-1"></i>Records
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <hr>
                                                    <div class="d-flex justify-content-between">
                                                        <h6 class="mb-3">Appointment History</h6>
                                                        <a href="/appointments/new?patientId=<%= appointment.Patient.id %>" class="btn btn-sm btn-outline-primary">
                                                            <i class="fas fa-plus me-1"></i>New Appointment
                                                        </a>
                                                    </div>
                                                    <div class="patient-history-placeholder text-center py-4">
                                                        <div class="spinner-border text-primary" role="status">
                                                            <span class="visually-hidden">Loading...</span>
                                                        </div>
                                                        <p class="mt-2 text-muted">Loading appointment history...</p>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="/doctors/<%= appointment.Doctor.id %>" class="doctor-link" data-bs-toggle="modal" data-bs-target="#doctorModal<%= appointment.Doctor.id %>">
                                        Dr. <%= appointment.Doctor.firstName %> <%= appointment.Doctor.lastName %>
                                    </a>
                                    
                                    <!-- Doctor Quick View Modal -->
                                    <div class="modal fade" id="doctorModal<%= appointment.Doctor.id %>" tabindex="-1" aria-labelledby="doctorModalLabel<%= appointment.Doctor.id %>" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header bg-info text-white">
                                                    <h5 class="modal-title" id="doctorModalLabel<%= appointment.Doctor.id %>">
                                                        <i class="fas fa-user-md me-2"></i>Doctor Information
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body p-4">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <h5 class="mb-3">Dr. <%= appointment.Doctor.firstName %> <%= appointment.Doctor.lastName %></h5>
                                                            <p><strong>Specialization:</strong> <%= appointment.Doctor.specialization %></p>
                                                        </div>
                                                        <div class="col-md-6 text-md-end">
                                                            <div class="mt-3 mt-md-0">
                                                                <a href="/doctors/<%= appointment.Doctor.id %>" class="btn btn-primary">
                                                                    <i class="fas fa-eye me-1"></i>View Profile
                                                                </a>
                                                                <a href="/appointments/new?doctorId=<%= appointment.Doctor.id %>" class="btn btn-secondary ms-2">
                                                                    <i class="fas fa-calendar-plus me-1"></i>New Appointment
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td><%= appointment.reason ? appointment.reason.substring(0, 30) + (appointment.reason.length > 30 ? '...' : '') : 'N/A' %></td>
                                <td>
                                    <span class="badge <%= appointment.status === 'scheduled' ? 'bg-warning' : 
                                           appointment.status === 'completed' ? 'bg-success' : 
                                           appointment.status === 'cancelled' ? 'bg-danger' : 'bg-secondary' %>">
                                        <%= appointment.status %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/appointments/<%= appointment.id %>" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/appointments/<%= appointment.id %>/edit" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal" data-bs-target="#statusModal<%= appointment.id %>">
                                            <i class="fas fa-check-circle"></i>
                                        </button>
                                    </div>
                                    
                                    <!-- Status Update Modal -->
                                    <div class="modal fade" id="statusModal<%= appointment.id %>" tabindex="-1" aria-labelledby="statusModalLabel<%= appointment.id %>" aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header bg-primary text-white">
                                                    <h5 class="modal-title" id="statusModalLabel<%= appointment.id %>">
                                                        <i class="fas fa-clipboard-check me-2"></i>Update Appointment Status
                                                    </h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <form action="/appointments/<%= appointment.id %>/status?_method=PATCH" method="POST">
                                                    <div class="modal-body py-4">
                                                        <p class="mb-3">Update status for appointment with <strong><%= appointment.Patient.firstName %> <%= appointment.Patient.lastName %></strong></p>
                                                        <div class="mb-3">
                                                            <label for="status<%= appointment.id %>" class="form-label">Status</label>
                                                            <select class="form-select" id="status<%= appointment.id %>" name="status" required>
                                                                <option value="scheduled" <%= appointment.status === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
                                                                <option value="completed" <%= appointment.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                                                <option value="cancelled" <%= appointment.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                                                <option value="no-show" <%= appointment.status === 'no-show' ? 'selected' : '' %>>No Show</option>
                                                            </select>
                                                        </div>
                                                        <div class="mb-3">
                                                            <label for="statusNotes<%= appointment.id %>" class="form-label">Notes</label>
                                                            <textarea class="form-control" id="statusNotes<%= appointment.id %>" name="statusNotes" rows="2" placeholder="Optional notes about this status change"></textarea>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                                                            <i class="fas fa-times me-1"></i>Cancel
                                                        </button>
                                                        <button type="submit" class="btn btn-primary">
                                                            <i class="fas fa-save me-1"></i>Update Status
                                                        </button>
                                                    </div>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center">No appointments found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>