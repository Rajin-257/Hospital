<div class="row">
    <div class="col-md-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Dr. <%= doctor.firstName %> <%= doctor.lastName %></h2>
            <div class="btn-group">
                <a href="/doctors/<%= doctor.id %>/edit" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <a href="/doctors/<%= doctor.id %>/availability" class="btn btn-primary">
                    <i class="fas fa-clock"></i> Update Availability
                </a>
                <% if (user.role === 'admin') { %>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Doctor Information -->
    <div class="col-md-4 mb-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Doctor Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <span class="badge <%= doctor.isAvailable ? 'bg-success' : 'bg-secondary' %> float-end p-2">
                        <%= doctor.isAvailable ? 'Available' : 'Unavailable' %>
                    </span>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Name:</div>
                    <div class="col-md-7">Dr. <%= doctor.firstName %> <%= doctor.lastName %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Specialization:</div>
                    <div class="col-md-7"><%= doctor.specialization %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Qualification:</div>
                    <div class="col-md-7"><%= doctor.qualification %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Contact:</div>
                    <div class="col-md-7"><%= doctor.contactNumber %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Email:</div>
                    <div class="col-md-7"><%= doctor.email %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Address:</div>
                    <div class="col-md-7"><%= doctor.address || 'Not specified' %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Fee:</div>
                    <div class="col-md-7">$<%= doctor.consultationFee %></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Appointments -->
    <div class="col-md-8 mb-4">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">Upcoming Appointments</h5>
            </div>
            <div class="card-body">
                <% if (appointments && appointments.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Time</th>
                                    <th>Patient</th>
                                    <th>Reason</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% appointments.forEach(appointment => { %>
                                    <tr>
                                        <td><%= new Date(appointment.appointmentDate).toLocaleDateString() %></td>
                                        <td><%= appointment.appointmentTime %></td>
                                        <td>
                                            <a href="/patients/<%= appointment.Patient.id %>">
                                                <%= appointment.Patient.firstName %> <%= appointment.Patient.lastName %>
                                            </a><br>
                                            <small class="text-muted"><%= appointment.Patient.contactNumber %></small>
                                        </td>
                                        <td><%= appointment.reason ? appointment.reason.substring(0, 30) + (appointment.reason.length > 30 ? '...' : '') : 'N/A' %></td>
                                        <td>
                                            <a href="/appointments/<%= appointment.id %>" class="btn btn-sm btn-info">View</a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <p class="mb-0">No upcoming appointments.</p>
                <% } %>
            </div>
            <div class="card-footer">
                <a href="/doctors/<%= doctor.id %>/appointments" class="btn btn-outline-primary">View All Appointments</a>
            </div>
        </div>
    </div>

    <!-- Account Information -->
    <div class="col-md-12 mb-4">
        <div class="card shadow">
            <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0">Account Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="row mb-2">
                            <div class="col-md-5 fw-bold">Username:</div>
                            <div class="col-md-7"><%= doctor.User.username %></div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row mb-2">
                            <div class="col-md-5 fw-bold">Email:</div>
                            <div class="col-md-7"><%= doctor.User.email %></div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="row mb-2">
                            <div class="col-md-5 fw-bold">Status:</div>
                            <div class="col-md-7">
                                <span class="badge <%= doctor.User.isActive ? 'bg-success' : 'bg-danger' %>">
                                    <%= doctor.User.isActive ? 'Active' : 'Inactive' %>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete Dr. <%= doctor.firstName %> <%= doctor.lastName %>?</p>
                <p class="text-danger">This will also delete the associated user account. This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/doctors/<%= doctor.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>