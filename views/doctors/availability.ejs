<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Update Availability</h5>
            </div>
            <div class="card-body">
                <h5 class="mb-4">Dr. <%= doctor.firstName %> <%= doctor.lastName %></h5>
                
                <form action="/doctors/<%= doctor.id %>/availability?_method=PUT" method="POST">
                    <div class="mb-4">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="isAvailable" name="isAvailable" value="true" <%= doctor.isAvailable ? 'checked' : '' %>>
                            <label class="form-check-label" for="isAvailable">
                                Doctor is currently <%= doctor.isAvailable ? 'available' : 'unavailable' %>
                            </label>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/doctors/<%= doctor.id %>" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">Update Availability</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>