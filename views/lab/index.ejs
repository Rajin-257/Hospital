<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Laboratory Tests</h2>
    <a href="/lab/new" class="btn btn-primary">
        <i class="fas fa-plus"></i> Request New Test
    </a>
</div>

<!-- Filters -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form action="/lab" method="GET" class="row g-3">
            <div class="col-md-6">
                <label for="status" class="form-label">Filter by Status</label>
                <select class="form-select" id="status" name="status">
                    <option value="">All Statuses</option>
                    <option value="requested" <%= selectedStatus === 'requested' ? 'selected' : '' %>>Requested</option>
                    <option value="scheduled" <%= selectedStatus === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
                    <option value="completed" <%= selectedStatus === 'completed' ? 'selected' : '' %>>Completed</option>
                    <option value="cancelled" <%= selectedStatus === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                </select>
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-filter"></i> Filter
                </button>
                <a href="/lab" class="btn btn-secondary ms-2">
                    <i class="fas fa-redo"></i> Reset
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Test Code</th>
                        <th>Test Name</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Request Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (labTests && labTests.length > 0) { %>
                        <% labTests.forEach(test => { %>
                            <tr>
                                <td><%= test.testCode %></td>
                                <td><%= test.testName %></td>
                                <td>
                                    <a href="/patients/<%= test.Patient.id %>">
                                        <%= test.Patient.firstName %> <%= test.Patient.lastName %>
                                    </a>
                                </td>
                                <td>
                                    <a href="/doctors/<%= test.Doctor.id %>">
                                        Dr. <%= test.Doctor.firstName %> <%= test.Doctor.lastName %>
                                    </a>
                                </td>
                                <td><%= new Date(test.requestDate).toLocaleDateString() %></td>
                                <td>
                                    <span class="badge <%= test.status === 'requested' ? 'bg-warning' : 
                                           test.status === 'scheduled' ? 'bg-primary' : 
                                           test.status === 'completed' ? 'bg-success' : 'bg-danger' %>">
                                        <%= test.status %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/lab/<%= test.id %>" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/lab/<%= test.id %>/edit" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <% if (test.status === 'requested') { %>
                                            <a href="/lab/<%= test.id %>/assign" class="btn btn-sm btn-success">
                                                <i class="fas fa-user-plus"></i>
                                            </a>
                                        <% } %>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center">No lab tests found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>