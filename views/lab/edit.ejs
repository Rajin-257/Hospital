<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title mb-4">Edit Lab Test</h2>
                <form action="/lab/<%= labTest.id %>?_method=PUT" method="POST">
                    <div class="card mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">Basic Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="testName" class="form-label">Test Name</label>
                                    <input type="text" class="form-control" id="testName" name="testName" value="<%= labTest.testName %>" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="testCode" class="form-label">Test Code</label>
                                    <input type="text" class="form-control" id="testCode" name="testCode" value="<%= labTest.testCode %>" required>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="scheduledDate" class="form-label">Scheduled Date</label>
                                    <input type="date" class="form-control" id="scheduledDate" name="scheduledDate" value="<%= labTest.scheduledDate ? labTest.scheduledDate.toISOString().split('T')[0] : '' %>">
                                </div>
                                <div class="col-md-6">
                                    <label for="price" class="form-label">Price</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="number" step="0.01" class="form-control" id="price" name="price" value="<%= labTest.price %>" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label for="status" class="form-label">Status</label>
                                    <select class="form-select" id="status" name="status" required>
                                        <option value="requested" <%= labTest.status === 'requested' ? 'selected' : '' %>>Requested</option>
                                        <option value="scheduled" <%= labTest.status === 'scheduled' ? 'selected' : '' %>>Scheduled</option>
                                        <option value="completed" <%= labTest.status === 'completed' ? 'selected' : '' %>>Completed</option>
                                        <option value="cancelled" <%= labTest.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="technicianId" class="form-label">Technician</label>
                                    <select class="form-select" id="technicianId" name="technicianId">
                                        <option value="">Select a technician</option>
                                        <% technicians.forEach(tech => { %>
                                            <option value="<%= tech.id %>" <%= labTest.technicianId === tech.id ? 'selected' : '' %>>
                                                <%= tech.firstName %> <%= tech.lastName %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Results Section -->
                    <div class="card mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">Test Results</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="results" class="form-label">Results</label>
                                <textarea class="form-control" id="results" name="results" rows="6"><%= labTest.results %></textarea>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Notes Section -->
                    <div class="mb-4">
                        <label for="notes" class="form-label">Notes</label>
                        <textarea class="form-control" id="notes" name="notes" rows="3"><%= labTest.notes %></textarea>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/lab/<%= labTest.id %>" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">Update Lab Test</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>