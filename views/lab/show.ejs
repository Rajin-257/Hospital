<div class="row">
    <div class="col-md-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Lab Test: <%= labTest.testName %></h2>
            <div class="btn-group">
                <a href="/lab/<%= labTest.id %>/edit" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <% if (labTest.status === 'requested') { %>
                    <a href="/lab/<%= labTest.id %>/assign" class="btn btn-success">
                        <i class="fas fa-user-plus"></i> Assign Technician
                    </a>
                <% } %>
                <% if (user.role === 'admin') { %>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Test Information -->
    <div class="col-md-6 mb-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">Test Information</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <span class="badge <%= labTest.status === 'requested' ? 'bg-warning' : 
                           labTest.status === 'scheduled' ? 'bg-primary' : 
                           labTest.status === 'completed' ? 'bg-success' : 'bg-danger' %> float-end p-2">
                        <%= labTest.status %>
                    </span>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Test Name:</div>
                    <div class="col-md-7"><%= labTest.testName %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Test Code:</div>
                    <div class="col-md-7"><%= labTest.testCode %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Request Date:</div>
                    <div class="col-md-7"><%= new Date(labTest.requestDate).toLocaleDateString() %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Scheduled Date:</div>
                    <div class="col-md-7"><%= labTest.scheduledDate ? new Date(labTest.scheduledDate).toLocaleDateString() : 'Not yet scheduled' %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Completion Date:</div>
                    <div class="col-md-7"><%= labTest.completionDate ? new Date(labTest.completionDate).toLocaleDateString() : 'Not completed' %></div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-5 fw-bold">Price:</div>
                    <div class="col-md-7">$<%= labTest.price %></div>
                </div>
                <% if (labTest.doctorCommission) { %>
                    <div class="row mb-2">
                        <div class="col-md-5 fw-bold">Doctor Commission:</div>
                        <div class="col-md-7">$<%= parseFloat(labTest.doctorCommission).toFixed(2) %></div>
                    </div>
                <% } %>
                <% if (labTest.notes) { %>
                    <div class="row mb-2">
                        <div class="col-md-5 fw-bold">Notes:</div>
                        <div class="col-md-7"><%= labTest.notes %></div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Related Information -->
    <div class="col-md-6 mb-4">
        <div class="card shadow">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0">Related Information</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-5 fw-bold">Patient:</div>
                    <div class="col-md-7">
                        <a href="/patients/<%= labTest.Patient.id %>">
                            <%= labTest.Patient.firstName %> <%= labTest.Patient.lastName %>
                        </a><br>
                        <small class="text-muted">ID: <%= labTest.Patient.patientId %></small><br>
                        <small class="text-muted">Contact: <%= labTest.Patient.contactNumber %></small>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-5 fw-bold">Doctor:</div>
                    <div class="col-md-7">
                        <a href="/doctors/<%= labTest.Doctor.id %>">
                            Dr. <%= labTest.Doctor.firstName %> <%= labTest.Doctor.lastName %>
                        </a><br>
                        <small class="text-muted"><%= labTest.Doctor.specialization %></small>
                    </div>
                </div>
                <% if (labTest.Staff) { %>
                    <div class="row mb-3">
                        <div class="col-md-5 fw-bold">Technician:</div>
                        <div class="col-md-7">
                            <%= labTest.Staff.firstName %> <%= labTest.Staff.lastName %><br>
                            <small class="text-muted"><%= labTest.Staff.position %></small>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Results Section -->
    <div class="col-md-12 mb-4">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Test Results</h5>
            </div>
            <div class="card-body">
                <% if (labTest.results) { %>
                    <div class="mb-4">
                        <h6 class="fw-bold mb-2">Results:</h6>
                        <div class="bg-light p-3 rounded">
                            <pre class="mb-0"><%= labTest.results %></pre>
                        </div>
                    </div>
                <% } else if (labTest.status === 'completed') { %>
                    <p class="text-center">Results have been completed but not yet entered into the system.</p>
                <% } else { %>
                    <p class="text-center">Results will be available once the test is completed.</p>
                <% } %>

                <% if (labTest.status === 'scheduled' || labTest.status === 'requested') { %>
                    <form action="/lab/<%= labTest.id %>?_method=PUT" method="POST">
                        <div class="mb-3">
                            <label for="results" class="form-label">Enter Test Results</label>
                            <textarea class="form-control" id="results" name="results" rows="6" required></textarea>
                        </div>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-success">Submit Results</button>
                        </div>
                    </form>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="col-md-12 mb-4">
        <a href="/lab" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Lab Tests
        </a>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this lab test?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/lab/<%= labTest.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>