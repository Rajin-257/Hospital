<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Create New Lab Test for <%= patient.firstName %> <%= patient.lastName %></h2>
    <a href="/patients/<%= patient.id %>" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left"></i> Back to Patient
    </a>
</div>

<!-- Test Information -->
<div class="card mb-4">
    <div class="card-header bg-info text-white">
        <h5 class="mb-0">Test Information</h5>
    </div>
    <div class="card-body">
        <form action="/lab" method="POST">
            <input type="hidden" name="patientId" value="<%= patient.id %>">
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="testTypeId" class="form-label">Select Test Type</label>
                    <select class="form-select" id="testTypeId" name="testTypeId">
                        <option value="">-- Select a test type or create custom --</option>
                        <% labTestTypes.forEach(type => { %>
                            <option value="<%= type.id %>" data-price="<%= type.price %>" data-code="<%= type.code %>" data-name="<%= type.name %>"><%= type.name %> - $<%= parseFloat(type.price).toFixed(2) %> (Doctor Commission: $<%= parseFloat(type.doctorCommission).toFixed(2) %>)</option>
                        <% }); %>
                    </select>
                </div>
                
                <div class="col-md-6">
                    <label for="testName" class="form-label">Test Name</label>
                    <input type="text" class="form-control" id="testName" name="testName" required>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="price" class="form-label">Price</label>
                    <input type="text" class="form-control" id="price" name="price" required>
                </div>
                <div class="col-md-6">
                    <label for="testCode" class="form-label">Test Code</label>
                    <input type="text" class="form-control" id="testCode" name="testCode" required>
                </div>
            </div>
            
            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="requestedDate" class="form-label">Requested Date</label>
                        <input type="date" class="form-control" id="requestedDate" name="requestedDate" value="<%= new Date().toISOString().split('T')[0] %>" required>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="urgency" class="form-label">Urgency</label>
                        <select class="form-select" id="urgency" name="urgency" required>
                            <option value="Normal">Normal</option>
                            <option value="Urgent">Urgent</option>
                            <option value="STAT">STAT (Immediate)</option>
                        </select>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label for="notes" class="form-label">Notes/Instructions</label>
                <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
            </div>
            
            <div class="mb-3">
                <label for="doctorId" class="form-label">Requesting Doctor</label>
                <select class="form-select" id="doctorId" name="doctorId" required>
                    <option value="">Select Doctor</option>
                    <% doctors.forEach(doctor => { %>
                        <option value="<%= doctor.id %>">Dr. <%= doctor.firstName %> <%= doctor.lastName %> (<%= doctor.specialization %>)</option>
                    <% }); %>
                </select>
            </div>
            
            <div class="text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"></i> Create Lab Test
                </button>
            </div>
        </form>
    </div>
</div>



<script>
  document.addEventListener('DOMContentLoaded', function() {
    const testTypeSelect = document.getElementById('testTypeId');
    const testNameInput = document.getElementById('testName');
    const testCodeInput = document.getElementById('testCode');
    const priceInput = document.getElementById('price');
    
    testTypeSelect.addEventListener('change', function() {
      const selectedOption = this.options[this.selectedIndex];
      if (selectedOption.value) {
        testNameInput.value = selectedOption.getAttribute('data-name');
        testCodeInput.value = selectedOption.getAttribute('data-code');
        priceInput.value = selectedOption.getAttribute('data-price');
      } else {
        testNameInput.value = '';
        testCodeInput.value = '';
        priceInput.value = '';
      }
    });
  });
</script> 