<div class="container mt-4">
  <div class="card">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <h2><i class="fas fa-user"></i> Staff Details</h2>
      <div>
        <a href="/staff" class="btn btn-outline-light me-2">
          <i class="fas fa-arrow-left"></i> Back to Staff List
        </a>
        <a href="/staff/<%= staff.id %>/edit" class="btn btn-warning">
          <i class="fas fa-edit"></i> Edit
        </a>
      </div>
    </div>
    <div class="card-body">
      <div class="row mb-4">
        <div class="col-md-6">
          <div class="staff-photo mb-3 text-center">
            <i class="fas fa-user-circle fa-8x text-secondary"></i>
          </div>
          <h3 class="text-center"><%= staff.firstName %> <%= staff.lastName %></h3>
          <p class="text-center badge bg-info"><%= staff.position %></p>
        </div>
        <div class="col-md-6">
          <div class="staff-details">
            <table class="table">
              <tbody>
                <tr>
                  <th>Username:</th>
                  <td><%= staff.User.username %></td>
                </tr>
                <tr>
                  <th>Email:</th>
                  <td><%= staff.email %></td>
                </tr>
                <tr>
                  <th>Contact Number:</th>
                  <td><%= staff.contactNumber %></td>
                </tr>
                <tr>
                  <th>Address:</th>
                  <td><%= staff.address %></td>
                </tr>
                <tr>
                  <th>Join Date:</th>
                  <td><%= staff.joinDate ? new Date(staff.joinDate).toLocaleDateString() : 'Not specified' %></td>
                </tr>
                <tr>
                  <th>Status:</th>
                  <td>
                    <% if(staff.User.isActive) { %>
                      <span class="badge bg-success">Active</span>
                    <% } else { %>
                      <span class="badge bg-danger">Inactive</span>
                    <% } %>
                  </td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      
      <div class="mt-4 text-end">
        <form action="/staff/<%= staff.id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this staff member? This cannot be undone.')">
          <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Delete Staff
          </button>
        </form>
      </div>
    </div>
  </div>
</div> 