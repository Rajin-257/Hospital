<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Staff Directory</h2>
    <a href="/staff/new" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add New Staff
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Position</th>
                        <th>Contact</th>
                        <th>Email</th>
                        <th>Join Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (staff && staff.length > 0) { %>
                        <% staff.forEach(member => { %>
                            <tr>
                                <td><%= member.firstName %> <%= member.lastName %></td>
                                <td><%= member.position.charAt(0).toUpperCase() + member.position.slice(1) %></td>
                                <td><%= member.contactNumber %></td>
                                <td><%= member.email %></td>
                                <td><%= new Date(member.joinDate).toLocaleDateString() %></td>
                                <td>
                                    <span class="badge <%= member.isActive ? 'bg-success' : 'bg-danger' %>">
                                        <%= member.isActive ? 'Active' : 'Inactive' %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/staff/<%= member.id %>" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/staff/<%= member.id %>/edit" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= member.id %>">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                    
                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal<%= member.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to delete <%= member.firstName %> <%= member.lastName %>?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form action="/staff/<%= member.id %>?_method=DELETE" method="POST">
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center">No staff members found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Position Filter Buttons -->
<div class="mt-4">
    <h5>Filter by Position:</h5>
    <div class="btn-group">
        <a href="/staff" class="btn btn-outline-primary">All Staff</a>
        <a href="/staff/position/nurse" class="btn btn-outline-primary">Nurses</a>
        <a href="/staff/position/receptionist" class="btn btn-outline-primary">Receptionists</a>
        <a href="/staff/position/technician" class="btn btn-outline-primary">Technicians</a>
        <a href="/staff/position/admin" class="btn btn-outline-primary">Admins</a>
    </div>
</div>