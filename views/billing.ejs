        // Function to save patient data
        function savePatientData() {
            // Check if we have at least the required fields
            if (!$('#patient-name').val() || !$('#patient-phone').val()) {
                return; // Don't save if required fields are missing
            }
            
            // Get form data
            const formData = new FormData($('#patient-form')[0]);
            const data = {};
            
            // Convert FormData to object and handle blood group
            for (let [key, value] of formData.entries()) {
                if (key === 'bloodGroup' && value === '') {
                    data[key] = null;
                } else {
                    data[key] = value;
                }
            }
            
            // Handle date of birth based on type
            if ($('input[name="dobType"]:checked').val() === 'age') {
                const years = parseInt($('#dob-years').val()) || 0;
                const months = parseInt($('#dob-months').val()) || 0;
                const days = parseInt($('#dob-days').val()) || 0;
                
                if (years === 0 && months === 0 && days === 0) {
                    return; // Don't save if age is not set
                }
                
                const today = new Date();
                const dob = new Date(today);
                
                dob.setFullYear(today.getFullYear() - years);
                dob.setMonth(today.getMonth() - months);
                dob.setDate(today.getDate() - days);
                
                data.dateOfBirth = dob.toISOString().split('T')[0];
            }
            
            // Create a new patient - no updating functionality
            $.ajax({
                url: '/patients',
                type: 'POST',
                data: JSON.stringify(data),
                contentType: 'application/json',
                success: function(response) {
                    // Add patient to select and select it
                    const newOption = new Option(`${response.name} (${response.patientId})`, response.id, true, true);
                    $('#patient-select').append(newOption).trigger('change');
                    
                    // Set patient ID in billing form
