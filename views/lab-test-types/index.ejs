<div class="row mb-4">
  <div class="col-md-6">
    <h1><i class="fas fa-flask me-2"></i> Lab Test Types</h1>
  </div>
  <div class="col-md-6 text-end">
    <a href="/lab-test-types/new" class="btn btn-primary">
      <i class="fas fa-plus me-1"></i> Add New Test Type
    </a>
  </div>
</div>

<div class="card shadow">
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Name</th>
            <th>Code</th>
            <th>Price</th>
            <th>Doctor Commission</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (labTestTypes.length === 0) { %>
            <tr>
              <td colspan="6" class="text-center py-3">No lab test types found</td>
            </tr>
          <% } else { %>
            <% labTestTypes.forEach(testType => { %>
              <tr>
                <td><%= testType.name %></td>
                <td><%= testType.code %></td>
                <td>$<%= parseFloat(testType.price).toFixed(2) %></td>
                <td>$<%= parseFloat(testType.doctorCommission).toFixed(2) %></td>
                <td>
                  <% if (testType.isActive) { %>
                    <span class="badge bg-success">Active</span>
                  <% } else { %>
                    <span class="badge bg-danger">Inactive</span>
                  <% } %>
                </td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <a href="/lab-test-types/<%= testType.id %>/edit" class="btn btn-info text-white">
                      <i class="fas fa-edit"></i>
                    </a>
                    <button class="btn btn-danger delete-test-type" data-id="<%= testType.id %>" data-name="<%= testType.name %>">
                      <i class="fas fa-trash"></i>
                    </button>
                  </div>
                </td>
              </tr>
            <% }); %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirm Delete</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete <span id="deleteTestTypeName"></span>?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <form id="deleteForm" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const deleteButtons = document.querySelectorAll('.delete-test-type');
    const deleteForm = document.getElementById('deleteForm');
    const deleteTestTypeName = document.getElementById('deleteTestTypeName');
    
    deleteButtons.forEach(button => {
      button.addEventListener('click', function() {
        const id = this.getAttribute('data-id');
        const name = this.getAttribute('data-name');
        
        deleteTestTypeName.textContent = name;
        deleteForm.action = `/lab-test-types/${id}?_method=DELETE`;
        
        new bootstrap.Modal(document.getElementById('deleteModal')).show();
      });
    });
  });
</script> 