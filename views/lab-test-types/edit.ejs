<div class="row">
  <div class="col-md-8 mx-auto">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Edit Lab Test Type</h3>
      </div>
      <div class="card-body">
        <form action="/lab-test-types/<%= labTestType.id %>?_method=PUT" method="POST">
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="name" class="form-label">Test Name</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= labTestType.name %>" required>
            </div>
            <div class="col-md-6">
              <label for="code" class="form-label">Test Code</label>
              <input type="text" class="form-control" id="code" name="code" value="<%= labTestType.code %>" required>
              <small class="text-muted">Must be unique</small>
            </div>
          </div>
          
          <div class="row mb-3">
            <div class="col-md-6">
              <label for="price" class="form-label">Price</label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" step="0.01" min="0" class="form-control" id="price" name="price" value="<%= labTestType.price %>" required>
              </div>
            </div>
            <div class="col-md-6">
              <label for="doctorCommission" class="form-label">Doctor Commission</label>
              <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" step="0.01" min="0" class="form-control" id="doctorCommission" name="doctorCommission" value="<%= labTestType.doctorCommission %>" required>
              </div>
            </div>
          </div>
          
          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3"><%= labTestType.description || '' %></textarea>
          </div>
          
          <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="isActive" name="isActive" <%= labTestType.isActive ? 'checked' : '' %>>
            <label class="form-check-label" for="isActive">Active</label>
          </div>
          
          <div class="d-flex justify-content-between">
            <a href="/lab-test-types" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Update Test Type</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div> 