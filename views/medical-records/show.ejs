<div class="row">
    <div class="col-md-12 mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Medical Record</h2>
            <div class="btn-group">
                <a href="/medical-records/<%= medicalRecord.id %>/edit" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <% if (user.role === 'admin' || user.role === 'doctor') { %>
                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                <% } %>
                <button class="btn btn-primary" onclick="window.print()">
                    <i class="fas fa-print"></i> Print
                </button>
            </div>
        </div>
    </div>

    <!-- Record Information -->
    <div class="col-md-12 mb-4">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Medical Record Details</h5>
                    <span class="badge bg-light text-dark">
                        <i class="fas fa-calendar"></i> <%= new Date(medicalRecord.visitDate).toLocaleDateString() %>
                    </span>
                </div>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-6">
                        <h5 class="mb-3">Patient Information</h5>
                        <p>
                            <strong>Name:</strong> 
                            <a href="/patients/<%= medicalRecord.Patient.id %>">
                                <%= medicalRecord.Patient.firstName %> <%= medicalRecord.Patient.lastName %>
                            </a><br>
                            <strong>Patient ID:</strong> <%= medicalRecord.Patient.patientId %><br>
                            <strong>Date of Birth:</strong> <%= new Date(medicalRecord.Patient.dateOfBirth).toLocaleDateString() %><br>
                            <strong>Gender:</strong> <%= medicalRecord.Patient.gender.charAt(0).toUpperCase() + medicalRecord.Patient.gender.slice(1) %><br>
                            <strong>Blood Group:</strong> <%= medicalRecord.Patient.bloodGroup || 'Not specified' %>
                        </p>
                    </div>
                    <div class="col-md-6">
                        <h5 class="mb-3">Doctor Information</h5>
                        <p>
                            <strong>Doctor:</strong> 
                            <a href="/doctors/<%= medicalRecord.Doctor.id %>">
                                Dr. <%= medicalRecord.Doctor.firstName %> <%= medicalRecord.Doctor.lastName %>
                            </a><br>
                            <strong>Specialization:</strong> <%= medicalRecord.Doctor.specialization %><br>
                            <% if (medicalRecord.followUpDate) { %>
                                <strong>Follow-up Date:</strong> <%= new Date(medicalRecord.followUpDate).toLocaleDateString() %>
                            <% } %>
                        </p>
                    </div>
                </div>
                
                <hr class="mb-4">
                
                <div class="row mb-4">
                    <div class="col-md-12">
                        <h5 class="mb-3">Diagnosis</h5>
                        <div class="bg-light p-3 rounded mb-4">
                            <p class="mb-0"><%= medicalRecord.diagnosis %></p>
                        </div>
                        
                        <% if (medicalRecord.prescription) { %>
                            <h5 class="mb-3">Prescription</h5>
                            <div class="bg-light p-3 rounded mb-4">
                                <p class="mb-0"><%= medicalRecord.prescription %></p>
                            </div>
                        <% } %>
                        
                        <% if (medicalRecord.notes) { %>
                            <h5 class="mb-3">Additional Notes</h5>
                            <div class="bg-light p-3 rounded">
                                <p class="mb-0"><%= medicalRecord.notes %></p>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="col-md-12 mb-4">
        <div class="d-flex justify-content-between">
            <a href="/medical-records" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Records
            </a>
            <div>
                <a href="/lab/new?patientId=<%= medicalRecord.Patient.id %>" class="btn btn-info me-2">
                    <i class="fas fa-flask"></i> Request Lab Test
                </a>
                <a href="/patients/<%= medicalRecord.Patient.id %>/appointments/new" class="btn btn-success">
                    <i class="fas fa-calendar-plus"></i> Schedule Follow-up
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this medical record?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/medical-records/<%= medicalRecord.id %>?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>