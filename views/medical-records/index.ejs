<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Medical Records</h2>
    <a href="/medical-records/new" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Record
    </a>
</div>

<!-- Filters (if patient filter is active) -->
<% if (typeof filters !== 'undefined' && filters && filters.patientId) { %>
    <div class="alert alert-info mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1">Showing medical records for: <%= patient ? `${patient.firstName} ${patient.lastName}` : 'Selected Patient' %></h5>
                <p class="mb-0">
                    <% if (patient) { %>
                        Patient ID: <%= patient.patientId %>
                    <% } %>
                </p>
            </div>
            <a href="/medical-records" class="btn btn-outline-primary">
                <i class="fas fa-times"></i> Clear Filter
            </a>
        </div>
    </div>
<% } %>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Patient</th>
                        <th>Doctor</th>
                        <th>Diagnosis</th>
                        <th>Follow-up</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (medicalRecords && medicalRecords.length > 0) { %>
                        <% medicalRecords.forEach(record => { %>
                            <tr>
                                <td><%= new Date(record.visitDate).toLocaleDateString() %></td>
                                <td>
                                    <% if (record.Patient) { %>
                                        <a href="/patients/<%= record.Patient.id %>">
                                            <%= record.Patient.firstName %> <%= record.Patient.lastName %>
                                        </a>
                                    <% } else { %>
                                        <span class="text-muted">Unknown Patient</span>
                                    <% } %>
                                </td>
                                <td>
                                    <% if (record.Doctor) { %>
                                        <a href="/doctors/<%= record.Doctor.id %>">
                                            Dr. <%= record.Doctor.firstName %> <%= record.Doctor.lastName %>
                                        </a><br>
                                        <small class="text-muted"><%= record.Doctor.specialization %></small>
                                    <% } else { %>
                                        <span class="text-muted">Unknown Doctor</span>
                                    <% } %>
                                </td>
                                <td><%= record.diagnosis ? record.diagnosis.substring(0, 50) + (record.diagnosis.length > 50 ? '...' : '') : 'N/A' %></td>
                                <td><%= record.followUpDate ? new Date(record.followUpDate).toLocaleDateString() : 'None' %></td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/medical-records/<%= record.id %>" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/medical-records/<%= record.id %>/edit" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="6" class="text-center">No medical records found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>