<div class="row">
    <!-- Welcome Card -->
    <div class="col-md-12 mb-4">
        <div class="card welcome-card">
            <div class="card-body d-flex align-items-center">
                <div class="me-4">
                    <i class="fas fa-hand-paper fa-3x"></i>
                </div>
                <div>
                    <h4 class="card-title mb-1">Welcome back, <%= user.username %></h4>
                    <p class="card-text mb-0">Role: <span class="badge bg-white text-primary"><%= user.role %></span> | Today is <%= new Date().toLocaleDateString('en-US', { weekday: 'long', month: 'long', day: 'numeric' }) %></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats Overview -->
    <div class="col-md-3 mb-4">
        <div class="stat-card stat-card-primary">
            <div class="stat-card-title">Total Patients</div>
            <p class="stat-card-value mb-0"><%= totalPatients || 0 %></p>
            <i class="fas fa-user-injured fa-3x" style="position: absolute; top: 10px; right: 10px; opacity: 0.2;"></i>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="stat-card stat-card-success">
            <div class="stat-card-title">Available Doctors</div>
            <p class="stat-card-value mb-0"><%= availableDoctors || 0 %></p>
            <i class="fas fa-user-md fa-3x" style="position: absolute; top: 10px; right: 10px; opacity: 0.2;"></i>
        </div>
    </div>

    <div class="col-md-3 mb-4">
        <div class="stat-card stat-card-info">
            <div class="stat-card-title">Available Cabins</div>
            <p class="stat-card-value mb-0"><%= availableCabins || 0 %></p>
            <i class="fas fa-bed fa-3x" style="position: absolute; top: 10px; right: 10px; opacity: 0.2;"></i>
        </div>
    </div>

    <% if (user.role === 'admin') { %>
        <div class="col-md-3 mb-4">
            <div class="stat-card stat-card-warning">
                <div class="stat-card-title">Monthly Revenue</div>
                <p class="stat-card-value mb-0">$<%= monthlyRevenue || 0 %></p>
                <i class="fas fa-chart-line fa-3x" style="position: absolute; top: 10px; right: 10px; opacity: 0.2;"></i>
            </div>
        </div>
    <% } %>

    <!-- Today's Appointments -->
    <div class="col-md-<%= user.role === 'admin' ? '8' : '12' %> mb-4">
        <div class="card shadow h-100">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Today's Appointments</h5>
                <span class="badge bg-primary rounded-pill"><%= (todayAppointments && todayAppointments.length) || 0 %> Total</span>
            </div>
            <div class="card-body">
                <% if (todayAppointments && todayAppointments.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-clock me-2"></i>Time</th>
                                    <th><i class="fas fa-user me-2"></i>Patient</th>
                                    <th><i class="fas fa-user-md me-2"></i>Doctor</th>
                                    <th><i class="fas fa-info-circle me-2"></i>Status</th>
                                    <th><i class="fas fa-cog me-2"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% todayAppointments.forEach(appointment => { %>
                                    <tr>
                                        <td><%= appointment.appointmentTime %></td>
                                        <td>
                                            <a href="/patients/<%= appointment.Patient.id %>" class="text-decoration-none">
                                                <%= appointment.Patient.firstName %> <%= appointment.Patient.lastName %>
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/doctors/<%= appointment.Doctor.id %>" class="text-decoration-none">
                                                Dr. <%= appointment.Doctor.firstName %> <%= appointment.Doctor.lastName %>
                                            </a>
                                        </td>
                                        <td>
                                            <span class="badge <%= appointment.status === 'scheduled' ? 'bg-warning' : 
                                               appointment.status === 'completed' ? 'bg-success' : 
                                               appointment.status === 'cancelled' ? 'bg-danger' : 'bg-secondary' %>">
                                                <%= appointment.status %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/appointments/<%= appointment.id %>" class="btn btn-sm btn-primary">
                                                <i class="fas fa-eye me-1"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="fas fa-calendar-check fa-4x mb-3 text-muted"></i>
                        <p class="mb-0">No appointments scheduled for today.</p>
                    </div>
                <% } %>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="/appointments" class="btn btn-outline-primary">
                    <i class="fas fa-list me-1"></i> All Appointments
                </a>
                <a href="/appointments/new" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> New Appointment
                </a>
            </div>
        </div>
    </div>

    <% if (user.role === 'admin') { %>
        <!-- Recent Billings -->
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="card-title mb-0">Recent Payments</h5>
                    <span class="badge bg-success rounded-pill"><%= (recentBillings && recentBillings.length) || 0 %> Payments</span>
                </div>
                <div class="card-body">
                    <% if (recentBillings && recentBillings.length > 0) { %>
                        <div class="appointment-list">
                            <div class="list-group">
                                <% recentBillings.forEach(billing => { %>
                                    <a href="/billing/<%= billing.id %>" class="list-group-item list-group-item-action">
                                        <div class="d-flex justify-content-between align-items-center">
                                            <h6 class="mb-1 text-primary"><%= billing.Patient.firstName %> <%= billing.Patient.lastName %></h6>
                                            <small class="text-muted"><%= new Date(billing.createdAt).toLocaleDateString() %></small>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <p class="mb-1 text-muted small">Invoice: #<%= billing.invoiceNumber %></p>
                                            <span class="badge bg-success">$<%= billing.paidAmount %></span>
                                        </div>
                                    </a>
                                <% }) %>
                            </div>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-file-invoice-dollar fa-4x mb-3 text-muted"></i>
                            <p class="mb-0">No recent payments.</p>
                        </div>
                    <% } %>
                </div>
                <div class="card-footer text-center">
                    <a href="/billing" class="btn btn-outline-primary">
                        <i class="fas fa-receipt me-1"></i> All Billings
                    </a>
                </div>
            </div>
        </div>
    <% } %>
</div>