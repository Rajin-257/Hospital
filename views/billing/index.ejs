<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Billing Records</h2>
    <a href="/billing/new" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Invoice
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Invoice #</th>
                        <th>Date</th>
                        <th>Patient</th>
                        <th>Total Amount</th>
                        <th>Paid Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (billings && billings.length > 0) { %>
                        <% billings.forEach(billing => { %>
                            <tr>
                                <td><%= billing.invoiceNumber %></td>
                                <td><%= new Date(billing.invoiceDate).toLocaleDateString() %></td>
                                <td>
                                    <a href="/patients/<%= billing.Patient.id %>">
                                        <%= billing.Patient.firstName %> <%= billing.Patient.lastName %>
                                    </a>
                                </td>
                                <td>$<%= billing.totalAmount %></td>
                                <td>$<%= billing.paidAmount %></td>
                                <td>
                                    <span class="badge <%= billing.paymentStatus === 'paid' ? 'bg-success' : 
                                           billing.paymentStatus === 'partial' ? 'bg-warning' : 'bg-danger' %>">
                                        <%= billing.paymentStatus %>
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/billing/<%= billing.id %>" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/billing/<%= billing.id %>/edit" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <% if (user.role === 'admin') { %>
                                            <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= billing.id %>">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                    
                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteModal<%= billing.id %>" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirm Delete</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Are you sure you want to delete invoice <%= billing.invoiceNumber %>?</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <form action="/billing/<%= billing.id %>?_method=DELETE" method="POST">
                                                        <button type="submit" class="btn btn-danger">Delete</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="7" class="text-center">No billing records found</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>