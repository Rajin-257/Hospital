<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title mb-4">Assign Patient to Cabin <%= cabin.cabinNumber %></h2>
                
                <div class="alert alert-info mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Cabin Number:</strong> <%= cabin.cabinNumber %></p>
                            <p><strong>Type:</strong> <%= cabin.cabinType.charAt(0).toUpperCase() + cabin.cabinType.slice(1) %></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Floor:</strong> <%= cabin.floor %></p>
                            <p><strong>Price Per Day:</strong> $<%= cabin.pricePerDay %></p>
                        </div>
                    </div>
                </div>
                
                <form action="/cabins/<%= cabin.id %>/assign?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="patientId" class="form-label">Select Patient</label>
                        <select class="form-select" id="patientId" name="patientId" required>
                            <option value="">Select a patient</option>
                            <% patients.forEach(patient => { %>
                                <option value="<%= patient.id %>"><%= patient.firstName %> <%= patient.lastName %> (<%= patient.patientId %>)</option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="admissionDate" class="form-label">Admission Date</label>
                        <input type="date" class="form-control" id="admissionDate" name="admissionDate" value="<%= new Date().toISOString().split('T')[0] %>" required>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/cabins/<%= cabin.id %>" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">Assign Patient</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>