<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title mb-4">Discharge Patient from Cabin <%= cabin.cabinNumber %></h2>
                
                <div class="alert alert-info mb-4">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Cabin Number:</strong> <%= cabin.cabinNumber %></p>
                            <p><strong>Type:</strong> <%= cabin.cabinType.charAt(0).toUpperCase() + cabin.cabinType.slice(1) %></p>
                            <p><strong>Price Per Day:</strong> $<%= cabin.pricePerDay %></p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Patient:</strong> <%= cabin.Patient.firstName %> <%= cabin.Patient.lastName %></p>
                            <p><strong>Admission Date:</strong> <%= new Date(cabin.admissionDate).toLocaleDateString() %></p>
                            <p><strong>Duration:</strong> 
                                <% 
                                    const admissionDate = new Date(cabin.admissionDate);
                                    const today = new Date();
                                    const diffTime = Math.abs(today - admissionDate);
                                    const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)); 
                                %>
                                <%= diffDays %> day<%= diffDays !== 1 ? 's' : '' %>
                            </p>
                        </div>
                    </div>
                </div>
                
                <div class="alert alert-warning mb-4">
                    <h5>Billing Information</h5>
                    <p class="mb-1"><strong>Estimated Cost:</strong> $<%= (diffDays * cabin.pricePerDay).toFixed(2) %></p>
                    <p class="mb-0">Don't forget to create an invoice for the patient.</p>
                </div>
                
                <form action="/cabins/<%= cabin.id %>/discharge?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="dischargeDate" class="form-label">Discharge Date</label>
                        <input type="date" class="form-control" id="dischargeDate" name="dischargeDate" value="<%= new Date().toISOString().split('T')[0] %>" required>
                    </div>
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/cabins/<%= cabin.id %>" class="btn btn-secondary me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary">Discharge Patient</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>